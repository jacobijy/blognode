{
  "restartable" :"rs",
  "ignore": [
    ".git",
    "client/public/javascripts/view/"
  ],
  "execMap": {
    "": "node",
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "/client/public/output/js/main.bundle.js",
    "server/*"
  ]
}